{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],

    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },

    "Enrich": [ "FromLogContext" ],

    "Properties": {
      "Application": "MedicineLog"
    },

    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-ddTHH:mm:ssK} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "standardErrorFromLevel": "Error"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=med_log;Username=insupport;Password=pgpass;Include Error Detail=true"
  },
  "PhotoStore": {
    "Root": "/app/photos"
  }

}
