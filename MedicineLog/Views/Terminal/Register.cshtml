@model MedicineLog.Models.MedicineRegViewModel
@{
    ViewData["Title"] = "Registrera";
}

<div class="card reg-card border-0">
    <div class="card-body p-4 p-md-5">
        <div class="d-flex gap-3 align-items-start mb-4">
            <div class="logo-box">LOGO</div>

            <div>
                <h1 class="h4 mb-1 fw-bold">Välkommen!</h1>
                <div class="text-secondary fw-semibold">Registrera medhavda läkemedel här.</div>
            </div>
        </div>

        <form asp-action="Register" asp-controller="Medication" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Ange förnamn" autocomplete="given-name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="form-label fw-semibold"></label>
                <input asp-for="LastName" class="form-control" placeholder="Ange efternamn" autocomplete="family-name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h6 mb-0 fw-bold">Läkemedel</h2>
                <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddMedicine">
                    + Lägg till läkemedel
                </button>
            </div>

            <div id="medicineList" class="vstack gap-3 mb-4">
                @for (var i = 0; i < Model.Medicines.Count; i++)
                {
                    <div class="border rounded p-3 medicine-item" data-index="@i">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="fw-semibold">Rad @(i + 1)</div>
                            <button type="button" class="btn btn-outline-danger btn-sm btnRemoveMedicine">
                                Ta bort
                            </button>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Medicines[i].MedicineName" class="form-label fw-semibold"></label>
                            <input asp-for="Medicines[i].MedicineName" class="form-control" placeholder="Ange läkemedlets namn" autocomplete="off" />
                            <span asp-validation-for="Medicines[i].MedicineName" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Medicines[i].Quantity" class="form-label fw-semibold"></label>
                            <input asp-for="Medicines[i].Quantity" class="form-control" placeholder="Ange antal" inputmode="numeric" />
                            <span asp-validation-for="Medicines[i].Quantity" class="text-danger"></span>
                        </div>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Registrera</button>
            <button type="button" class="btn btn-outline-secondary w-100" id="btnClear">Rensa</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
                (function () {
                    const list = document.getElementById('medicineList');
                    const btnAdd = document.getElementById('btnAddMedicine');
                    const btnClear = document.getElementById('btnClear');

                    function renumber() {
                        const items = Array.from(list.querySelectorAll('.medicine-item'));
                        items.forEach((item, newIndex) => {
                            item.dataset.index = newIndex;

                            // Update "Rad X"
                            const header = item.querySelector('.fw-semibold');
                            if (header) header.textContent = `Rad ${newIndex + 1}`;

                            // Update name/id/for/data-valmsg-for attributes to correct indexes
                            item.querySelectorAll('[name]').forEach(el => {
                                el.name = el.name.replace(/Medicines\[\d+\]/g, `Medicines[${newIndex}]`);
                            });

                            item.querySelectorAll('[id]').forEach(el => {
                                el.id = el.id.replace(/Medicines_\d+__/g, `Medicines_${newIndex}__`);
                            });

                            item.querySelectorAll('label[for]').forEach(el => {
                                el.setAttribute('for', el.getAttribute('for').replace(/Medicines_\d+__/g, `Medicines_${newIndex}__`));
                            });

                            item.querySelectorAll('[data-valmsg-for]').forEach(el => {
                                el.setAttribute('data-valmsg-for', el.getAttribute('data-valmsg-for').replace(/Medicines\[\d+\]/g, `Medicines[${newIndex}]`));
                            });
                        });
                    }

                    function addMedicineRow() {
                        const index = list.querySelectorAll('.medicine-item').length;

                        const html = `
        <div class="border rounded p-3 medicine-item" data-index="${index}">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div class="fw-semibold">Rad ${index + 1}</div>
            <button type="button" class="btn btn-outline-danger btn-sm btnRemoveMedicine">Ta bort</button>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold" for="Medicines_${index}__MedicineName">Läkemedel</label>
            <input class="form-control"
                   type="text"
                   id="Medicines_${index}__MedicineName"
                   name="Medicines[${index}].MedicineName"
                   placeholder="Ange läkemedlets namn"
                   autocomplete="off"
                   data-val="true"
                   data-val-required="Läkemedlets namn är obligatoriskt."
                   data-val-length="The field Läkemedel must be a string with a maximum length of 200."
                   data-val-length-max="200" />
            <span class="text-danger field-validation-valid"
                  data-valmsg-for="Medicines[${index}].MedicineName"
                  data-valmsg-replace="true"></span>
          </div>

          <div>
            <label class="form-label fw-semibold" for="Medicines_${index}__Quantity">Antal</label>
            <input class="form-control"
                   type="number"
                   id="Medicines_${index}__Quantity"
                   name="Medicines[${index}].Quantity"
                   placeholder="Ange antal"
                   inputmode="numeric"
                   data-val="true"
                   data-val-required="Antal är obligatoriskt."
                   data-val-range="Antal måste vara minst 1."
                   data-val-range-min="1"
                   data-val-range-max="100000" />
            <span class="text-danger field-validation-valid"
                  data-valmsg-for="Medicines[${index}].Quantity"
                  data-valmsg-replace="true"></span>
          </div>
        </div>`;

                        list.insertAdjacentHTML('beforeend', html);

                        // Re-parse unobtrusive validation for the newly added content (jQuery Validate)
                        if (window.jQuery && jQuery.validator && jQuery.validator.unobtrusive) {
                            jQuery.validator.unobtrusive.parse(list);
                        }
                    }

                    // Add
                    btnAdd?.addEventListener('click', addMedicineRow);

                    // Remove (event delegation)
                    list?.addEventListener('click', function (e) {
                        const btn = e.target.closest('.btnRemoveMedicine');
                        if (!btn) return;

                        const item = btn.closest('.medicine-item');
                        if (!item) return;

                        item.remove();

                        // Keep at least 1 row
                        if (list.querySelectorAll('.medicine-item').length === 0) {
                            addMedicineRow();
                        } else {
                            renumber();
                            if (window.jQuery && jQuery.validator && jQuery.validator.unobtrusive) {
                                jQuery.validator.unobtrusive.parse(list);
                            }
                        }
                    });

                    // Clear
                    btnClear?.addEventListener('click', function () {
                        const form = this.closest('form');
                        form?.reset();

                        // Remove all rows and add one fresh
                        list.innerHTML = '';
                        addMedicineRow();

                        // Clear validation messages
                        form?.querySelectorAll('.text-danger').forEach(e => e.textContent = '');
                    });
                })();
    </script>
}
