@model MedicineLog.Models.CreateSiteVm
@{
    ViewData["Title"] = "Skapa plats";
}

<div class="container mt-4">
    <h1>Skapa plats</h1>

    <form method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Namn</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktiv</label>
        </div>

        <button class="btn btn-primary" type="submit">Spara</button>
        <a class="btn btn-outline-secondary" asp-action="Sites">Avbryt</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
