@using MedicineLog.Areas.Kiosk.Models
@model MedicineRegVm
@{
    ViewData["Title"] = "Registrera";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <div class="mb-5 mt-2">
        <div class="d-flex align-items-start justify-content-between">
            <img class="image-fluid logo-box" src="~/logo.png" />
            <small class="text-secondary">
                @ViewBag.SiteName, @ViewBag.TerminalName
            </small>
        </div>
        <h1 class="h1 mt-4 text-secondary fw-semibold">Registrera medhavda läkemedel här.</h1>
    </div>

<form id="regForm" asp-action="Register" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" id="validationSummary"></div>

    <div class="mb-4 card shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="FirstName" class="form-label fw-semibold"></label>
                    <input asp-for="FirstName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label fw-semibold"></label>
                    <input asp-for="LastName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
    
            <div id="medicineList" class="vstack gap-3 mb-2">
                @for (var i = 0; i < Model.Medicines.Count; i++)
                {
                    <div class="medicine-item">
                        <div class="d-flex gap-2 align-items-end flex-wrap flex-md-nowrap">
                        
                            <div class="flex-grow-1">
                                <label asp-for="Medicines[i].MedicineName" class="form-label fw-semibold medicine-label">
                                    Läkemedel @(i + 1)
                                </label>
                                <input asp-for="Medicines[i].MedicineName" class="form-control" autocomplete="off" />
                            </div>

                            <div class="flex-shrink-0">
                                <label asp-for="Medicines[i].Quantity" class="form-label fw-semibold"></label>
                                <input asp-for="Medicines[i].Quantity" class="form-control" type="number" min="1" max="1000" inputmode="numeric" pattern="[0-9]*" value="1" />
                            </div>

                                <div class="flex-shrink-0 ms-2" style="width: 8rem;">
                                    <button type="button" class="btn btn-secondary photo-btn w-100" aria-label="Ta bild" title="Ta bild">
                                        Ta bild
                                        <img class="photo-thumb d-none" alt="Förhandsvisning" />
                                    </button>

                                    <input asp-for="Medicines[i].Photo"
                                           class="d-none medicine-photo-input"
                                           type="file"
                                           accept="image/*" 
                                           capture="user"/>
                                </div>

                            <div class="flex-shrink-0 d-flex justify-content-end" style="width: 5rem;">
                                <button type="button" class="d-none btn btn-danger btnRemoveMedicine" aria-label="Ta bort läkemedel" title="Ta bort" style="width: 100%;"> <i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                        <span asp-validation-for="Medicines[i].MedicineName" class="text-danger"></span>
                        <span asp-validation-for="Medicines[i].Quantity" class="text-danger"></span>
                        <span asp-validation-for="Medicines[i].Photo" class="text-danger"></span>
                    </div>
                }
              
            </div>
    <div class="mt-3 d-flex justify-content-start">
        <button type="button" class="btn btn-secondary" id="btnAddMedicine">
            + Lägg till fler läkemedel
        </button>
        </div>
        </div>
    </div>

    <div class="mt-5">
        <button type="submit" class="btn btn-primary w-100 mb-3 btn-lg">Registrera</button>
        <button type="button" class="btn btn-secondary w-100 btn-lg" id="btnClear">Rensa formulär</button>
    </div>
</form>


<!-- SENDING MODAL -->
<div class="modal" id="sendingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content px-4 py-4">
            <div class="modal-body d-flex align-items-center gap-3">
                <div class="spinner-border" role="status" aria-label="Laddar"></div>
                <div class="fs-5 fw-semibold">Skickar formulär…</div>
            </div>
        </div>
    </div>
</div>

<!-- SUCCESS MODAL -->
<div class="modal" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content px-4 py-4">
            <div class="modal-body text-center">
                <h2>Registreringen lyckades!</h2>
                <svg class="mt-2 modal-check" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                    <path d="M9.0 16.2 4.8 12l-1.4 1.4L9.0 19 21 7l-1.4-1.4z"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- ERROR MODAL -->
<div class="modal" id="submitErrorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content px-4 py-4">
            <div class="modal-body">
                <h3 class="h5 fw-bold mb-2">Kunde inte skicka</h3>
                <div id="submitErrorText" class="fs-5 text-danger"></div>
                <button type="button" class="btn btn-secondary mt-3 w-100" data-bs-dismiss="modal">Stäng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/reg-form-submission.js" type="module"></script>
    <script src="/js/reg-form-ui.js" type="module"></script>
}

<style>
    .modal-check {
        width: 96px;
        height: 96px;
        fill: #16a34a;
        display: inline-block;
    }

    .photo-btn {
        position: relative;
        height: 6.5rem; /* big tappable area */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        padding: 0;
    }

        .photo-btn .photo-thumb {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .photo-btn.has-photo i {
            display: none; /* hide camera icon when photo exists */
        }
</style>



